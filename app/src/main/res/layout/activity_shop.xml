<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopActivity">
    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/arrow"
        ></ImageView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/logo"
        app:lottie_autoPlay="true"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"
        android:layout_marginTop="80dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/title"
        android:layout_below="@id/animationView"
        style="@style/shadoweffect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SHOP"
        android:textColor="@color/yellow"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adsDes"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="One time buy - remove all ads"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/adsFree"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove all ads 3$"
        android:layout_gravity="center"
        android:layout_below="@id/adsDes"
        android:layout_centerInParent="true"></Button>

    <TextView
        android:id="@+id/titleSub"
        android:layout_below="@id/adsFree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Subscription - after buying subscription all hard level are open"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/subShort"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleSub"
        android:text="Subscription 1 month 5$"
        android:layout_gravity="center"
        android:layout_centerInParent="true"></Button>

    <Button
        android:id="@+id/subLong"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subShort"
        android:layout_gravity="center"
        android:text="Subscription 3 month 10$"
        android:layout_centerInParent="true"></Button>




</RelativeLayout>